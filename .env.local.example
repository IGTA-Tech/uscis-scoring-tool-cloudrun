# =====================================
# Xtraordinary Petition Scoring
# Environment Variables
# =====================================

# ============ REQUIRED ============

# AI API KEYS (At least one required)
ANTHROPIC_API_KEY=sk-ant-api03-xxx           # Claude - Primary AI for scoring
MISTRAL_API_KEY=xxx                           # Mistral - PDF/image OCR

# SUPABASE (Required for persistent storage)
NEXT_PUBLIC_SUPABASE_URL=https://xxx.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJxxx
SUPABASE_SERVICE_ROLE_KEY=eyJxxx

# ============ STRIPE (For Payments) ============

# Get from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_xxx                 # Stripe secret key
STRIPE_WEBHOOK_SECRET=whsec_xxx               # From Stripe webhook settings

# Price IDs (create in Stripe Dashboard > Products)
STRIPE_PRICE_SINGLE=price_xxx                 # $49 single scoring
STRIPE_PRICE_PACK5=price_xxx                  # $199 5-pack
STRIPE_PRICE_PACK10=price_xxx                 # $349 10-pack
STRIPE_PRICE_UNLIMITED=price_xxx              # $499/mo unlimited

# ============ EMAIL (For Sending Results) ============

# Get from: https://app.sendgrid.com/settings/api_keys
SENDGRID_API_KEY=SG.xxx
SENDGRID_FROM_EMAIL=noreply@yourdomain.com    # Must be verified in SendGrid

# ============ OPTIONAL/FALLBACK ============

# OpenAI (Fallback if Claude fails)
OPENAI_API_KEY=sk-xxx

# Google Gemini (Enhanced RAG features)
GOOGLE_API_KEY=xxx

# Perplexity (Research features)
PERPLEXITY_API_KEY=pplx-xxx

# ============ APPLICATION ============

# Your production URL (for email links, Stripe redirects)
NEXT_PUBLIC_APP_URL=https://yourdomain.com

# File upload limit
MAX_UPLOAD_SIZE_MB=150
